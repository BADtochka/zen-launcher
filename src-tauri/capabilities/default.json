{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Full FS access",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        "**/*"
      ]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "zen",
          "cmd": "C:\\Program Files\\Zen Browser\\zen.exe",
          "args": true
        },
        {
          "name": "shutdown",
          "cmd": "shutdown",
          "args": true
        }
      ]
    }
  ]
}
