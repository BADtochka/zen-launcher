{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Full FS access",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-hide",
    "core:window:allow-show",
    "opener:default",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": ["**/*"]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "shutdown",
          "cmd": "shutdown",
          "args": true
        },
        {
          "name": "sleep",
          "cmd": "rundll32.exe",
          "args": ["powrprof.dll,SetSuspendState", "0,1,0"]
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "zen",
          "cmd": "C:\\Program Files\\Zen Browser\\zen.exe",
          "args": true
        }
      ]
    }
  ]
}
